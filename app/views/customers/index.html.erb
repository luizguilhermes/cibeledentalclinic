<section>
  <h1>Lista de Pacientes</h1>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nome do paciente</th>
        <th>CPG</th>
        <th>RG</th>
        <th>Sexo</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= customer.customer_name %></td>
        <td><%= customer.customer_cpf %></td>
        <td><%= customer.customer_rg %></td>
        <td><%= customer.customer_gender %></td>
        <td><%= link_to 'Detalhes', customer, class: "btn btn-primary btn-sm" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>
<div><%= link_to 'Voltar', root_path , class: "btn btn-primary" %></div>
